
<%- include('../partials/header'); -%>

<h1 class="text-center">
  Edit list: <%= list.name %>
</h1>

<div class="row justify-content-md-center">
  <div class="col col-lg-6 col-md-8 col-sm-12">
    <form action="/lists/<%= list._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="listName">Name</label>
        <input type="text" id="listName" class="form-control" name="list[name]" placeholder="name" value="<%= list.name %>" autofocus>
      </div>
      <div class="form-group">
        <label for="listDescription">Description</label>
        <input type="text" id="listDescription" class="form-control" name="list[description]" placeholder="description" value="<%= list.description %>">
      </div>
      <button class="form-control btn btn-secondary">Submit Edit</button>
    </form>
  </div>
</div>

<%- include('../partials/footer'); -%>
