
<%- include('../partials/header'); -%>

<h1 class="text-center">
  Create a new list!
</h1>

<div class="row justify-content-md-center">
  <div class="col col-lg-6 col-md-8 col-sm-12">
    <form action="/lists" method="POST">
      <div class="form-group">
        <label for="listName">Name</label>
        <input type="text" id="listName" class="form-control" name="list[name]" placeholder="name" autofocus>
      </div>
      <div class="form-group">
        <label for="listDescription">Description</label>
        <input type="text" id="listDescription" class="form-control" name="list[description]" placeholder="description">
      </div>
      <button class="form-control btn btn-info">Create List</button>
    </form>
  </div>
</div>

<%- include('../partials/footer'); -%>
