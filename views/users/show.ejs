
<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <h2>User Profile</h2>
        <ul class="list-group mt-4">
            <li class="list-group-item">Username: <%= currentUser.username %></li>
            <% if (currentUser.email) { %>
                <li class="list-group-item">(Note: Emails can be set but are not yet supported) Email: <%= currentUser.email %></li>
            <% } %>
        </ul>
        <a class="btn btn-info mt-4" href="/profile/edit">Edit Profile</a>
    </div>
</div>

<% include ../partials/footer %>
